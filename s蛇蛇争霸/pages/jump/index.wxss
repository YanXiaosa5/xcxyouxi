/* pages/jump/index.wxss */
@import "../../wxParse/wxParse.wxss";

.container{
  background: #cecece;
  min-height: 100vh;
  padding: 0;
}

.content-article-detail {
   padding: 0;
}

.entry-title {
  font-size: 48rpx;
  line-height: 1.6;
  font-weight: bold;
  outline: none;
  color: #3a4040;
}


.entry-summary {
  font-size: 32rpx;
  line-height: 64rpx;
  letter-spacing: 1px;
}

.entry-summary image {
  width: 100% !important;
}




.contact{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

.contact button{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  background: none;
  padding: 0;
  margin: 0;
  border: none;
  border-radius: 0;
}
.contact button::after{
  width: 0;
  height: 0;
}

.contact image{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
}
.wxParse-inline{ width: auto; height: auto;}

.wxParse-p{ margin-top: 0;}

button.contact{
  padding: 0;
  border-radius: 0rpx;
  border: none;
}
button.contact::after{
  width: 0;
  height: 0;
}